@model IEnumerable<Glowee.Models.Venda>

<h2>Minhas Vendas</h2>

@if (!Model.Any())
{
    <p class="text-muted">Nenhuma venda registrada ainda.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Descrição</th>
                <th>Categoria</th>
                <th>Preço</th>
                <th>Data da Venda</th>
                <!--<th>Cliente</th>-->
            </tr>
        </thead>
        <tbody>
            @foreach (var venda in Model)
            {
                <tr>
                    <td>@venda.Produto?.Nome</td>
                    <td>@venda.Produto?.Descricao</td>
                    <td>@venda.Produto?.Categoria</td>
                    <td>R$ @venda.Produto?.Preco.ToString("F2")</td>
                    <td>@venda.DataVenda.ToString("dd/MM/yyyy")</td>
                    @* Não é necessário exibir o cliente
                    <td>
                        @if (venda.Cliente != null)
                        {
                            @venda.Cliente.Nome
                        }
                        else
                        {
                            <span class="text-muted">Não finalizada</span>
                        }
                    </td>
                    *@

                </tr>
            }
        </tbody>
    </table>
}
