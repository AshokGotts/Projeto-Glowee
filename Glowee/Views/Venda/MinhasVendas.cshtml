@model IEnumerable<Glowee.Models.Venda>
@{
    ViewData["Title"] = "Minhas Vendas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/sales.css" asp-append-version="true" />
}

<section class="sales-section">
    <div class="container-fluid">
        <div class="row section-content">
            <div class="col-12">
                <h1 class="sales-title text-center mb-5">Minhas Vendas</h1>
            </div>
        </div>

        <div class="sales-filters mb-4">
            <div class="row align-items-center">
                <div class="col-12 col-md-8 col-lg-6 mb-3 mb-md-0">
                    <div class="search-container">
                        <div class="search-box">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text" id="salesSearch" class="form-control search-input" placeholder="Buscar vendas..." />
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-4 col-lg-3 mb-3 mb-md-0">
                    <div class="filter-container">
                        <select id="categoryFilter" class="form-select filter-select">
                            <option value="">Todas as categorias</option>
                            <option value="Facial">Facial</option>
                            <option value="Corporal">Corporal</option>
                        </select>
                    </div>
                </div>

                <div class="col-12 col-lg-3">
                    <div class="results-info">
                        <span id="resultsCount" class="results-text">Mostrando todas as vendas</span>
                    </div>
                </div>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="no-results">
                <div class="no-results-content">
                    <i class="fas fa-chart-line no-results-icon"></i>
                    <h3 class="no-results-title">Nenhuma venda registrada ainda</h3>
                    <p class="no-results-text">
                        Quando você marcar produtos como vendidos, eles aparecerão aqui.
                    </p>
                </div>
            </div>
        }
        else
        {
            <div class="sales-table-container">
                <div class="table-responsive">
                    <table class="table sales-table" id="salesTable">
                        <thead>
                            <tr>
                                <th scope="col">Produto</th>
                                <th scope="col">Descrição</th>
                                <th scope="col">Categoria</th>
                                <th scope="col">Preço</th>
                                <th scope="col">Data da Venda</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var venda in Model)
                            {
                                <tr class="sale-row">
                                    <td class="product-name">@venda.Produto?.Nome</td>
                                    <td class="product-description">@venda.Produto?.Descricao</td>
                                    <td class="product-category">
                                        <span class="category-badge category-@(venda.Produto?.Categoria?.ToLower())">@venda.Produto?.Categoria</span>
                                    </td>
                                    <td class="product-price">R$ @venda.Produto?.Preco.ToString("F2")</td>
                                    <td class="sale-date">@venda.DataVenda.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="no-results" id="noResults" style="display: none">
                <div class="no-results-content">
                    <i class="fas fa-search no-results-icon"></i>
                    <h3 class="no-results-title">Nenhuma venda encontrada</h3>
                    <p class="no-results-text">
                        Tente ajustar os filtros ou termo de busca para encontrar suas vendas.
                    </p>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts {
    <script src="~/js/mobile-menu.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/js/sales.js" asp-append-version="true"></script>
}
