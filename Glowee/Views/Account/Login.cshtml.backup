@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <input name="email" placeholder="Email" class="form-control" />
    <input name="senha" placeholder="Senha" type="password" class="form-control" />
    <button type="submit" class="btn btn-success mt-3">Entrar</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-2">@ViewBag.Error</div>
}
