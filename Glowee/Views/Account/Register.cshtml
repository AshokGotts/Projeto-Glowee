@model Glowee.Models.User
@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
}

<section class="register-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="register-container">
                    <div class="register-logo">
                        <img src="~/images/branding/logo.png" alt="Glowee" class="register-logo-img" />
                    </div>

                    <h1 class="register-title">Cadastrar</h1>
                    <form class="register-form" id="registerForm" asp-action="Register" method="post" novalidate>
                        <div class="form-group">
                            <label for="fullName" class="form-label">Nome Completo</label>
                            <input type="text" id="fullName" name="Nome" asp-for="Nome" class="form-control register-input" placeholder="Seu nome completo" required />
                            <span asp-validation-for="Nome" class="form-error"></span>
                        </div>

                        <div class="form-group">
                            <label for="email" class="form-label">E-mail</label>
                            <input type="email" id="email" name="Email" asp-for="Email" class="form-control register-input" placeholder="seu@email.com" required />
                            <span asp-validation-for="Email" class="form-error"></span>
                        </div>

                        <div class="form-group">
                            <label for="password" class="form-label">Senha</label>
                            <div class="password-input-container">
                                <input type="password" id="password" name="Senha" asp-for="Senha" class="form-control register-input" placeholder="Sua senha" required />
                                <button type="button" class="password-toggle" id="passwordToggle">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Senha" class="form-error"></span>
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword" class="form-label">Confirme a Senha</label>
                            <div class="password-input-container">
                                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control register-input" placeholder="Confirme sua senha" required />
                                <button type="button" class="password-toggle" id="confirmPasswordToggle">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Campo oculto: o usuário sempre será Cliente -->
                        <input type="hidden" name="Role" value="Cliente" />

                        <button type="submit" class="btn btn-primary register-btn">
                            Cadastrar
                        </button>
                    </form>

                    <div class="register-footer">
                        <p class="register-footer-text">
                            Já tem uma conta?
                            <a asp-controller="Account" asp-action="Login" class="register-footer-link">Fazer Login</a>
                        </p>
                    </div>

                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                    {
                    <div class="form-error" style="text-align: center; margin-top: var(--space-md);">
                        <strong>Por favor, corrija os erros abaixo:</strong>
                        <ul style="text-align: left; margin-top: var(--space-sm);">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                            <li>@error.ErrorMessage</li>
                                }
                        </ul>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/mobile-menu.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/js/register.js" asp-append-version="true"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
