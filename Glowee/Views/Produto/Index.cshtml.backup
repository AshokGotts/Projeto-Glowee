@model IEnumerable<Glowee.Models.Produto>
@{
    ViewData["Title"] = "Produtos";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var usuarioId = Context.Session.GetInt32("UsuarioId");
    var role = Context.Session.GetString("Role");
    var isVendedor = usuarioId != null && role == "Vendedor";
}

<h2 class="mb-4">Produtos Dispon√≠veis</h2>

<!-- Link para busca -->
<div class="mb-3 d-flex justify-content-between align-items-center">
    <a asp-controller="Produto" asp-action="Buscar" class="btn btn-outline-primary">
        üîç Procurar Produto
    </a>

    <!-- Ordena√ß√£o -->
    <form method="get" asp-action="Index" class="d-inline">
        <select name="ordenarPor" class="form-select" onchange="this.form.submit()" style="width: 200px;">
            <option value="">Ordenar por...</option>
            <option value="precoAsc">Pre√ßo: menor para maior</option>
            <option value="precoDesc">Pre√ßo: maior para menor</option>
            <option value="nome">Nome</option>
            <option value="recentes">Mais recentes</option>
        </select>
    </form>
</div>

<!-- Exibi√ß√£o dos produtos -->
<div class="row">
    @foreach (var produto in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@produto.ImagemUrl" class="card-img-top" alt="Imagem do produto" style="height: 200px; object-fit: cover;" />
                <div class="card-body">
                    <h5 class="card-title">@produto.Nome</h5>
                    <p class="card-text">@produto.Descricao</p>
                    <p><strong>Categoria:</strong> @produto.Categoria</p>
                    <p><strong>Pre√ßo:</strong> R$ @produto.Preco.ToString("F2")</p>

                    <!-- Informa√ß√µes do vendedor -->
                    @if (usuarioId != null)
                    {
                        <p><strong>Vendedor:</strong> @produto.Vendedor?.Nome</p>
                        <p><strong>Email:</strong> @produto.Vendedor?.Email</p>
                    }
                    else
                    {
                        <div style="filter: blur(4px); pointer-events: none;">
                            <p><strong>Vendedor:</strong> ********</p>
                            <p><strong>Email:</strong> ********</p>
                        </div>
                        <small class="text-danger">üîí Necess√°rio estar logado para ver informa√ß√µes do vendedor</small>
                    }

                    <!-- A√ß√µes de venda e exclus√£o -->
                    @if (!produto.Vendido)
                    {
                        @if (isVendedor)
                        {
                            if (produto.VendedorId == usuarioId.Value)
                            {
                                <!-- Bot√µes ativos para o dono do produto -->
                                <form asp-action="MarcarComoVendido" method="post">
                                    <input type="hidden" name="id" value="@produto.ProdutoId" />
                                    <button type="submit" class="btn btn-success btn-sm">Marcar como vendido</button>
                                </form>

                                <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir este produto?');">
                                    <input type="hidden" name="id" value="@produto.ProdutoId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                                </form>
                            }
                            else
                            {
                                <!-- Bot√µes desabilitados para produtos de outro vendedor -->
                                <button class="btn btn-outline-primary btn-sm me-1" disabled>Marcar como vendido</button>
                                <button class="btn btn-outline-primary btn-sm" disabled>Excluir</button>
                                <div class="mt-1 text-danger fw-bold">Produto pertence a outro vendedor</div>
                            }
                        }
                    }
                    else
                    {
                        <span class="badge bg-secondary">Vendido</span>
                    }
                </div>
            </div>
        </div>
    }
</div>
