@model IEnumerable<Glowee.Models.Produto>
@{
    ViewData["Title"] = "Produtos";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var usuarioId = Context.Session.GetInt32("UsuarioId");
    var role = Context.Session.GetString("Role");
    var isVendedor = usuarioId != null && role == "Vendedor";
    var isLoggedIn = usuarioId != null;
}

@section Styles {
    <link rel="stylesheet" href="~/css/products.css" asp-append-version="true" />
}

<section class="products-section">
    <div class="container-fluid">
        <div class="row section-content">
            <div class="col-12">
                <h1 class="products-title text-center mb-5">Todos os Produtos</h1>
            </div>
        </div>

        <div class="products-filters mb-4">
            <div class="row align-items-center">
                <div class="col-12 col-md-6 col-lg-4 mb-3 mb-md-0">
                    <div class="search-container">
                        <div class="search-box">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text" id="productSearch" class="form-control search-input" placeholder="Buscar produtos..." />
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-3 col-lg-3 mb-3 mb-md-0">
                    <div class="filter-container">
                        <select id="categoryFilter" class="form-select filter-select">
                            <option value="">Todas as categorias</option>
                            <option value="Facial">Facial</option>
                            <option value="Corporal">Corporal</option>
                        </select>
                    </div>
                </div>


                <div class="col-12 col-md-6 col-lg-6">
                    <div class="results-info">
                        <span id="resultsCount" class="results-text">Mostrando todos os produtos</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="products-grid">
            @{
                var productIndex = 1;
            }
            @foreach (var produto in Model)
            {
                <div class="product-card">
                    <div class="product-image">
                        <img src="@produto.ImagemUrl" alt="@produto.Nome" />
                    </div>
                    <div class="product-info">
                        <h3 class="product-name">@produto.Nome</h3>
                        <p class="product-description">@produto.Descricao</p>
                        <p class="product-category">@produto.Categoria</p>
                        <p class="product-price">R$ @produto.Preco.ToString("F2")</p>

                        @if (role == "Cliente" || role == "Vendedor")
                        {
                        <div class="vendor-info" id="vendorInfo@(productIndex)">
                            <div class="vendor-details">
                                <p class="vendor-name">
                                    <i class="fas fa-user me-2"></i>@produto.Vendedor?.Nome
                                </p>
                                <p class="vendor-email">
                                    <i class="fas fa-envelope me-2"></i>@produto.Vendedor?.Email
                                </p>
                            </div>
                        </div>
                           }
                        else
                            {
                        <div class="info-icon" id="infoIcon@(productIndex)" title="Ver detalhes do vendedor">
                            <i class="fas fa-info-circle"></i>
                        </div>
                        }

                        @if (!produto.Vendido && isVendedor && produto.VendedorId == usuarioId.Value)
                        {
                        <div class="mt-3">
                            <form asp-action="MarcarComoVendido" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@produto.ProdutoId" />
                                <button type="submit" class="btn btn-success btn-sm me-2">
                                    <i class="fas fa-check me-1"></i>Marcar como vendido
                                </button>
                            </form>

                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir este produto?');">
                                <input type="hidden" name="id" value="@produto.ProdutoId" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash me-1"></i>Excluir
                                </button>
                            </form>
                        </div>
                        }
                        else if (produto.Vendido)
                        {
                        <div class="mt-3">
                            <span class="badge bg-secondary">
                                <i class="fas fa-check me-1"></i>Vendido
                            </span>
                        </div>
                        }
                    </div>
                </div>
                productIndex++;
            }
        </div>
    </div>
</section>

<div class="modal fade" id="infoModal" tabindex="-1" aria-labelledby="infoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="infoModalLabel">
                    <i class="fas fa-info-circle me-2"></i>Informação
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>
                    Para ter acesso a mais informações sobre os vendedores e seus produtos, você precisa fazer login em sua conta.
                </p>
                <p class="mb-0">Faça login para:</p>
                <ul class="mt-2">
                    <li>Ver informações de contato dos vendedores</li>
                    <li>Acessar ofertas exclusivas</li>
                    <li>Fazer pedidos personalizados</li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Fechar
                </button>
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Fazer Login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/mobile-menu.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/js/products.js" asp-append-version="true"></script>
}
